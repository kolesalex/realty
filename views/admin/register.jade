extends ../layout

block menu
    include menu
block content
    h2.page-header Реєстрація
    p Зараєструйтеся за допомогою наступної форми
    if errors
     each error, i in errors
      li.alert.alert-danger #{error.msg}
    form(method='POST', action='/admin/register')
     .form-group
      label Ім'я
      input.form-control(name='name', type='text', placeholder='Ім\'я')
     .form-group
      label Е-скринька
      input.form-control(name='email', type='email', placeholder='Е-скринька')
     .form-group
      label Лоґін
      input.form-control(name='login', type='text', placeholder='Лоґін')
     .form-group
      label Пароль
      input.form-control(name='password', type='password', placeholder='Пароль')
     .form-group
      label Підтвердіть Пароль
      input.form-control(name='password2', type='password', placeholder='Підтвердіть Пароль')
     input.btn.btn-primary(type='submit', name='submit', value='Зареєструватися')